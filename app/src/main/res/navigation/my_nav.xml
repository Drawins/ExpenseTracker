<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/displayFragment"
        android:name="com.example.expensetracker.DisplayFragment"
        android:label="fragment_display"
        tools:layout="@layout/fragment_display">
        <action
            android:id="@+id/action_displayFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_displayFragment_to_addIncomeFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_displayFragment_to_expenseFragment"
            app:destination="@id/expenseFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.expensetracker.AddFragment"
        android:label="fragment_add"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_addFragment_to_displayFragment"
            app:destination="@id/displayFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.expensetracker.ProfileFragment"
        android:label="fragment_add_income"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_addIncomeFragment_to_displayFragment"
            app:destination="@id/displayFragment" />
        <action
            android:id="@+id/action_profileFragment_to_signInFragment"
            app:destination="@id/signInFragment"/>
    </fragment>
    <fragment
        android:id="@+id/expenseFragment"
        android:name="com.example.expensetracker.ExpenseFragment"
        android:label="fragment_expense"
        tools:layout="@layout/fragment_expense" >
        <action
            android:id="@+id/action_expenseFragment_to_displayFragment"
            app:destination="@id/displayFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.expensetracker.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_signInFragment_to_displayFragment"
            app:destination="@id/displayFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.expensetracker.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_displayFragment"
            app:destination="@id/displayFragment" />
    </fragment>
</navigation>